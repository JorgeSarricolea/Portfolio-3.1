<section class="w-full md:max-w-full md:px-0 px-8 mb-12">
  <h1
    class="text-primary md:text-5xl text-3xl font-bold text-center md:my-20 my-8 uppercase"
  >
    Contact
  </h1>
  <form action="" class="bg-gray w-full md:w-1/2 m-auto p-8 rounded-2xl">
    <h2 class="text-primary m-auto w-fit mb-8">Talk to me!</h2>
    <!-- Name and Email -->
    <div class="grid lg:grid-cols-2 gap-4 mb-4">
      <div>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Name*"
          class="w-full px-3 py-2 border-2 border-t-0 border-l-0 border-r-0 focus:outline-none bg-transparent border-secondary focus:border-primary"
          required
        />
      </div>
      <div>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Email*"
          class="w-full px-3 py-2 border-2 border-t-0 border-l-0 border-r-0 focus:outline-none bg-transparent border-secondary focus:border-primary"
          required
        />
      </div>
    </div>

    <!-- Subject and Message -->
    <div class="grid lg:grid-cols-1 gap-4 mb-4">
      <div>
        <input
          type="text"
          id="subject"
          name="subject"
          placeholder="Subject*"
          class="w-full px-3 py-2 border-2 border-t-0 border-l-0 border-r-0 focus:outline-none bg-transparent border-secondary focus:border-primary"
          required
        />
      </div>
      <!-- Message -->
      <div class="mb-4">
        <textarea
          id="mensaje"
          name="message"
          placeholder="Talk to me about whatever you want!*"
          rows="4"
          class="w-full px-3 py-2 border-2 border-t-0 border-l-0 border-r-0 focus:outline-none bg-transparent border-secondary focus:border-primary"
          required></textarea>
      </div>
    </div>
    <!-- Submit Btn -->
    <button
      type="button"
      id="submitButton"
      class="bg-primary text-gray justify-center px-6 py-2 rounded-2xl uppercase mt-8 flex m-auto w-full hover:bg-secondary hover:text-white transition-colors duration-500"
      >Submit</button
    >
  </form>
</section>

<script>
  document
    .getElementById("submitButton")
    .addEventListener("click", function () {
      let form = document.getElementById("contactForm");
      if (form instanceof HTMLFormElement && form.checkValidity()) {
        let formData = new FormData(form);
        let body = "";

        // Go through all the fields of the form
        formData.forEach(function (value, key) {
          // Add the field name and its value to the message body
          body += key + ": " + value + "\n";
        });

        // Set the email subject
        let subject = formData.get("subject");

        // Object with the form data to send
        let dataToSend = {
          body: body,
          subject: subject,
        };

        // Make the request to send the form
        fetch("https://formsubmit.co/ajax/jjorgesarricolea18@gmail.com", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(dataToSend),
        })
          .then((response) => response.json())
          .then((data) => {
            console.log(data);
            alert("Message sent succesfully!");
          })
          .catch((error) => {
            console.error("Error:", error);
          });
      } else {
        alert("Please fill out all required fields.");
      }
    });
</script>
